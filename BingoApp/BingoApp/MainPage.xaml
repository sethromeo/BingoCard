<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingoApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Bingo Game!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Enter Game Token" FontSize="Title" Padding="30,10,30,10"/>
        
        <Entry FontSize="20" x:Name="tokenEntry" BackgroundColor="White"/>
        
        <Button Text="Submit" BackgroundColor="Green" FontSize="20" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
